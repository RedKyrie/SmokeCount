@model Biblioteca.Models.View.DetailHeetsViewModel
@{
    Layout = "~/Views/Shared/_LayoutBasePage.cshtml";
}


@if (Model.Heets.Nome != null)
{
    <table>
        <tr>
            <td style="width:200px">
                <img src="~/Uploads/Heets/@Model.Heets.ID/@Model.Heets.Immagine" width="150" />
            </td>
            <td>
                <h2>@Model.Heets.Nome</h2>
                <p><b>Tipologia:</b> @Model.Heets.Tipo</p>
                <p><b>Prezzo:</b> @Model.Heets.Costo €</p>
                <b>Dati contenuto:</b>
                <p>Catrame: @Model.Heets.Catrame</p>
                <p>Nicotina: @Model.Heets.Nicotina</p>
                <p>Monossido di Carbonio: @Model.Heets.Monossido</p>
                @*<p style="color:brown; text-align: left">@Model.Pacchetto.Testo</p>   *@
            </td>
        </tr>
    </table>
}
else
{
    <h2>@ViewBag.Title</h2>
    <p>@Model.MessaggioErrore</p>
}

@*è la pagina principale, ha come layaut di base il layout di _LayoutBasePage*@