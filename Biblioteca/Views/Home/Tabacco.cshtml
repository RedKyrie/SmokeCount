@model Biblioteca.Models.View.TabaccoViewModel
@{
    ViewBag.Title = "Tabacco";
    Layout = "~/Views/Shared/_LayoutBasePage.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        border-radius: 5px;
        border: 1px solid #D8D8D8;
    }

    img {
        border-radius: 5px 5px 0 0;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    }

    .container {
        padding: 2px 16px;
    }
</style>

<title>Tabacco</title>

@foreach (var t in Model.Trinciato)
{
    <div class="card" style="float:left; margin-left:90px; margin-bottom: 20px; width: 200px;">
        <img src="~/Uploads/Tabacco/@t.ID/@t.Immagine" class="card-img-top" style="width: 200px; height: 250px; text-align:center" alt="...">
        <div class="container">
            <h5><b>@t.Nome</b></h5>
            <a href="@Biblioteca.Helpers.PathHelper.GetTabaccoUrl(t.ID)" class="btn btn-primary">Dettagli</a>
        </div>
    </div>
}

