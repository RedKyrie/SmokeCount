@model Biblioteca.Models.View.DetailViewModel
@{
    Layout = "~/Views/Shared/_LayoutBasePage.cshtml";
}


@if (Model.Pacchetto.Nome != null)
{
    <table>
        <tr>
            <td style="width:200px">
                <img src="~/Uploads/Pacchetti/Imgs/@Model.Pacchetto.ID_pacchetto/@Model.Pacchetto.Immagine" width="150" />
            </td>
            <td>
                <h2>@Model.Pacchetto.Nome</h2>
                <p><b>Tipologia:</b> @Model.Pacchetto.Tipo</p>
                <p><b>Prezzo:</b> @Model.Pacchetto.Costo €</p>
                <b>Dati contenuto:</b>
                <p>Catrame: @Model.Pacchetto.Catrame</p>
                <p>Nicotina: @Model.Pacchetto.Nicotina</p>
                <p>Monossido di Carbonio: @Model.Pacchetto.Monossido</p>
                @*<p style="color:brown; text-align: left">@Model.Pacchetto.Testo</p>   *@
            </td>
        </tr>
    </table>
}
else
{
    <h2>@ViewBag.Title</h2>
    <p>@Model.MessaggioErrore</p>
}

@*è la pagina principale, ha come layaut di base il layout di _LayoutBasePage*@